<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/button_for_addition_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:textAllCaps="false"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/do_you_want"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_for_addition_content"
        android:text="Do you want to add something? Click add button"
        android:layout_marginTop="40dp"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/do_you_want"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical" >
        <RadioButton
            android:id="@+id/lost_and_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost and Found"
            android:textSize="19sp" />
        <RadioButton
            android:id="@+id/sell_and_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell or Buy"
            android:textSize="19sp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apartment"
            android:textSize="19sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/user_description"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/options"
        android:hint="write some descriptions"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"/>

    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/options"
        android:text="Upload"
        android:layout_marginTop="45dp"
        android:textSize="19sp" />



</androidx.constraintlayout.widget.ConstraintLayout>